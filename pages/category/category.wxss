/* pages/category/category.wxss */

.container {
  height: 100vh;
  width: 100vw;
}

.title {
  margin: 30rpx auto 30rpx;
  text-align: center;
}

.category {
  height: 90%;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
}

.category_cat, .category_dog {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 450rpx;
  width: 100%;
}

.cat_title, .dog_title {
  width: 90%;
  display: flex;
  align-items: center;
}

.cat_inner, .dog_inner {
  height: 200rpx;
  width: 200rpx;
  background-color: papayawhip;
}

.cat_more, .dog_more {
  width: 90%;
  text-align: right;
}

.cat_list, .dog_list {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 320rpx;
  width: 100%;
  flex-wrap: wrap;
}

.cat_info, .dog_info {
  text-align: center;
}

.cat_img, .dog_img {
  height: 50rpx;
  width: 50rpx;
}
